{
  "extends": ["eslint:recommended", "google"],
  "parserOptions": {
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "browser": true,
    "amd": true,
    "node": true
  },
  "rules": {
    "brace-style": ["error", "stroustrup"],
    "space-before-function-paren": ["error", {"anonymous": "always", "named": "never"}],
    "max-len": ["error", 120],
    "indent": ["error", 2],
    "no-invalid-this": 0
  }
}
